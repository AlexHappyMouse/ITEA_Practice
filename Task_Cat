class Cat:

    def __init__(self, name: str, age: int, food: int):
        self.name = name
        self.age = age
        self.food = food

    def feed(self):
        self.food += 1
        print(f"\nNow I am {self.food * 20}% full")

    def walk(self):
        self.food -= 1
        print(f"\nNow I want to walk on {self.food * 20}%")

    def full_cat(self):
        print(f"\nSorry, but I am full and do not want to eat anymore! Let us go walk!")

    def hungry_cat(self):
        print(f"\nSorry, but I am hungry and want to eat. I cannot walk!")

    def name_age(self):
        print(f"Hey there! I am CAT, my name is {self.name} and I am {self.age} years old.")


my_cat = Cat("Matroskin", 5, 0)

my_cat.name_age()

while True:
    action = input('''\nChoose the action:
    
    1. Feed your cat
    2. Walk with your cat
    
>>: ''')
    if action == "1":
        my_cat.feed()
    elif action == "2":
        my_cat.walk()
    else:
        print("\nYou have chosen a wrong option, try again")
        continue
