# Проверка пароля на надежность - маленькая, большая, число, количество символов

from random import randint
import time
print(time.time())
begin_time = time.time()

time.sleep(5)

end_time = time.time()

print(round(end_time - begin_time, 2))

def password_gen():
    ask = int(input("How many symbols will your password consist? "))

    password = ""

    for i in range(ask):
        symb = chr(randint(33, 126))
        password += symb
    return password

live = True
while live:

    menu = '''  1. Generate password
  2. Quit'''

    command = input("Please, enter the command: \n" + menu)
    if command == "1":
        password = password_gen()
        print(f"Your new password is: {password}")
    elif command == "2":
        print("This program will end its work in 3 seconds")
        time.sleep(3)
        live = False






# print(f"Your new password is: {password}")
